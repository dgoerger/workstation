#!/bin/bash

<% unless node['zoo_workstation']['sssd']['ldap_server'].empty? || node['zoo_workstation']['sssd']['ldap_dc'].empty? -%>
/usr/lib64/nagios/plugins/check_ldaps -H <%= node['zoo_workstation']['sssd']['ldap_server'] -%> -b <%= node['zoo_workstation']['sssd']['ldap_dc'] -%> -S -w 5 -c 20 -t 30
